---
import Layout from "../layouts/Layout.astro";

const pageTitle = "About Me";
const identity = [
  { title: "Name", value: "eowiz" },
  { title: "Address", value: "Tokyo/Japan" },
  { title: "Employment", value: "Software Engineer" },
];
---

<Layout title={pageTitle} >
  <h1 class="text-center text-4xl font-bold mb-8">{pageTitle}</h1>
  {
    identity.map((ident) => (
      <section class="text-center mb-6">
        <h2 class="text-2xl font-thin mb-2">{ident.title}</h2>
        <p>{ident.value}</p>
      </section>
    ))
  }
</Layout>
